<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUp">
        <RelativeLayout
            android:id="@+id/Relative_SignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/ScrollSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:id="@+id/RelativeSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/RelativeSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/textaccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create an account"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/large_text"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RelativeInfo"
                        android:layout_below="@+id/RelativeSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Full Name *"/>
                        <EditText
                            android:id="@+id/etFullName"
                            android:layout_below="@+id/textFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="textPersonName"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeMobile"
                        android:layout_below="@+id/RelativeInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Code"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/textMobile"
                            android:layout_toRightOf="@+id/textCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Mobile Number *"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/textCodeNumber"
                            android:layout_below="@+id/textCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="+91"
                            android:layout_marginTop="20dp"/>
                        <!--<Spinner
                            android:id="@+id/SpinnerCode"
                            android:layout_below="@+id/textCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>-->
                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_below="@+id/textMobile"
                            android:layout_toRightOf="@+id/textCodeNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="number"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeOptionalNumber"
                        android:layout_below="@+id/RelativeMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textOptionalNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Alternate Mobile Number (optional)"/>
                        <EditText
                            android:id="@+id/etOptionalNumber"
                            android:layout_below="@+id/textOptionalNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="number"
                            android:hint="Mobile Number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeEmail"
                        android:layout_below="@+id/RelativeOptionalNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Email Id (optional)"/>
                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_below="@+id/textEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="textEmailAddress"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeCategory"
                        android:layout_below="@+id/RelativeEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_edittext_black">
                        <Spinner
                            android:id="@+id/SpinnerCategory"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/category"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeVill"
                        android:layout_below="@+id/RelativeCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/textVill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Village/Town *"/>
                        <EditText
                            android:id="@+id/etVill"
                            android:layout_below="@+id/textVill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="text"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeShop"
                        android:layout_below="@+id/RelativeVill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textShop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Shop No. *"/>
                        <EditText
                            android:id="@+id/etShop"
                            android:layout_below="@+id/textShop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="number"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeLandMark"
                        android:layout_below="@+id/RelativeShop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textLandMark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Landmark *"/>
                        <EditText
                            android:id="@+id/etLandMark"
                            android:layout_below="@+id/textLandMark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="text"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeTehsil"
                        android:layout_below="@+id/RelativeLandMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textTehsil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Tehsil *"/>
                        <EditText
                            android:id="@+id/etTehsil"
                            android:layout_below="@+id/textTehsil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="text"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativeCity"
                        android:layout_below="@+id/RelativeTehsil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="City/District *"/>
                        <EditText
                            android:id="@+id/etCity"
                            android:layout_below="@+id/textCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="text"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RelativePincode"
                        android:layout_below="@+id/RelativeCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textPincode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:text="Pincode *"/>
                        <EditText
                            android:id="@+id/etPincode"
                            android:layout_below="@+id/textPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/small_text"
                            android:inputType="number"
                            />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/btnCreateAccount"
                        android:layout_below="@+id/RelativePincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Account"
                        android:layout_margin="10dp"
                        android:textColor="@color/text_black"
                        android:background="@color/colorAccent"
                        android:textSize="@dimen/medium_text"/>
                </RelativeLayout>

            </ScrollView>
        </RelativeLayout>
</RelativeLayout>
