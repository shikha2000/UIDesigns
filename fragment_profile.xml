<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    <RelativeLayout
        android:id="@+id/RelativeProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_keyboard_arrow_left_black_18dp"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/large_text"/>
    </RelativeLayout>
        <View
            android:id="@+id/viewProfile"
            android:layout_below="@+id/RelativeProfile"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_black"
            />
        <RelativeLayout
            android:id="@+id/RelativeMyProfile"
            android:layout_below="@+id/viewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_toRightOf="@+id/imgProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Shikha Thakur"
                android:textColor="@color/text_black"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="20dp"/>

            <RatingBar
                android:id="@+id/ratingbarUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imgProfile"
                android:numStars="5"
                android:rating="4"
                style="?android:attr/ratingBarStyleSmall"
                />
            <TextView
                android:id="@+id/tvCompleteProfile"
                android:layout_toRightOf="@+id/imgProfile"
                android:layout_below="@+id/ratingbarUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Your Profile"
                android:textColor="@color/text_black"
                android:textSize="@dimen/small_text"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RelativeIdentification"
            android:layout_below="@+id/RelativeMyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/text_black">
            <TextView
                android:id="@+id/textIdentification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1. Identity Verification "
                android:textSize="@dimen/small_text"
                android:textColor="@color/textColorWhite"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Relative_BankDetails"
            android:layout_below="@+id/RelativeIdentification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/text_black">
            <TextView
                android:id="@+id/text_Bank_Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="2. Bank Details "
                android:textSize="@dimen/small_text"
                android:textColor="@color/textColorWhite"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/btnSumbit"
            android:layout_below="@+id/Relative_BankDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit For Approval"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/text_black"
            android:background="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</FrameLayout>