<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AccountSetting">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <RelativeLayout
        android:id="@+id/RelativeAccount_Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/image_Back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_keyboard_arrow_left_black_18dp"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/large_text"/>
    </RelativeLayout>
    <View
        android:id="@+id/viewSetting"
        android:layout_below="@+id/RelativeAccount_Setting"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_black"
        />
    <TextView
        android:id="@+id/tvLogout"
        android:layout_below="@+id/viewSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/text_black"
        android:textSize="@dimen/small_text"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"/>
    <View
        android:id="@+id/viewLogout"
        android:layout_below="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_black"
        android:layout_margin="10dp"/>
</RelativeLayout>
</RelativeLayout>